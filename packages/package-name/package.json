{
  "name": "@product-name/package-name",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build:js": "tsup --config tsup.config.ts",
    "build:types": "tsc -p tsconfig.types.json --emitDeclarationOnly",
    "build": "pnpm clean && pnpm build:js && pnpm build:types",
    "dev": "tsup --config tsup.config.ts --watch",
    "type-check": "tsc -p tsconfig.types.json --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "ajv": "*",
    "ajv-formats": "*",
    "picomatch": "*",
    "yaml": "*"
  },
  "devDependencies": {
    "@types/node": "*",
    "@types/picomatch": "*",
    "cpy-cli": "*",
    "rimraf": "*",
    "tsup": "*",
    "typescript": "*",
    "vitest": "*",
    "@kb-labs/devkit": "link:../../../kb-labs-devkit",
    "tsx": "*"
  }
}
